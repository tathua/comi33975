//Ejemplo calcu
function calculadora(primerNumero, segundoNumero, operacion) {
    switch (operacion) {
        case "+":
             return primerNumero + segundoNumero;
            
            break;
        case "-":
             return primerNumero - segundoNumero;
            break;
        case "*":
             primerNumero * segundoNumero;
            break;
        case "/":
             primerNumero / segundoNumero;
            break;
        default:
             0;
            break;
    }
}
let resultado = calculadora(200,5, "+")
alert(resultado)
alert(resultado + 10)





